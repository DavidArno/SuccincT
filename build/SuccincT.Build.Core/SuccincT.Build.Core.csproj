<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <Version>3.0.0</Version>
    <PackageId>SuccincT</PackageId>
    <Product>SuccincT</Product>
    <Authors>David Arno</Authors>
    <Company>David Arno</Company>
  	<Copyright>Copyright Â© David Arno, 2017</Copyright>
    <Description>Succinc&lt;T&gt; is a .NET library that adds a number of functional features to C#</Description>
    <RepositoryUrl>https://github.com/DavidArno/SuccincT</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <AssemblyName>SuccincT</AssemblyName>
    <RootNamespace>SuccincT</RootNamespace>

    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <PostBuildEvent>copy succinct.dll "$(SolutionDir)Artifacts\succinct.1.6.dll</PostBuildEvent>
    <PreBuildEvent>if not [%MKLINK%] == [] goto mklinkset
set MKLINK=mklink
:mklinkset

if not exist "$(SolutionDir)build\SuccincT.Build.Core\Functional" %MKLINK% /D "$(SolutionDir)build\SuccincT.Build.Core\Functional" "$(SolutionDir)src\SuccincT\Functional"
if not exist "$(SolutionDir)build\SuccincT.Build.Core\Options" %MKLINK% /D "$(SolutionDir)build\SuccincT.Build.Core\Options" "$(SolutionDir)src\SuccincT\Options"
if not exist "$(SolutionDir)build\SuccincT.Build.Core\Parsers" %MKLINK% /D "$(SolutionDir)build\SuccincT.Build.Core\Parsers" "$(SolutionDir)src\SuccincT\Parsers"
if not exist "$(SolutionDir)build\SuccincT.Build.Core\PatternMatchers" %MKLINK% /D "$(SolutionDir)build\SuccincT.Build.Core\PatternMatchers" "$(SolutionDir)src\SuccincT\PatternMatchers"
if not exist "$(SolutionDir)build\SuccincT.Build.Core\Tuples" %MKLINK% /D "$(SolutionDir)build\SuccincT.Build.Core\Tuples" "$(SolutionDir)src\SuccincT\Tuples"
if not exist "$(SolutionDir)build\SuccincT.Build.Core\Unions" %MKLINK% /D "$(SolutionDir)build\SuccincT.Build.Core\Unions" "$(SolutionDir)src\SuccincT\Unions"
</PreBuildEvent>


  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ValueTuple" Version="4.3.0" />
  </ItemGroup>
</Project>